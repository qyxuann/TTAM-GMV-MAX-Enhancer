{
  "manifest_version": 3,
  "name": "TTAM GMV MAX Table Enhancer",
  "version": "1.0",
  "description": "增强TTAM GMV MAX 表格体验",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://ads.tiktok.com/i18n/gmv-max/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}